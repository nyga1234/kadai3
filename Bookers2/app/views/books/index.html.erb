<%= flash[:notice] %>

<% if @book.errors.any? %>
    <h3>There is an error in the entered content<%= @book.errors.count %>There are cases</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <table class='table'>
        <tbody>
        <tr></tr>
        <tr>
	       <th>name</th>
         <th><%= current_user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= current_user.introduction %></th>
       </tr>
       </tbody>
      </table>
      <div class="row">
　　　<%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %>
　　　</div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, local:true do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title" />
      </div>

      <div class="form-group">
        <label for="book_body">Body</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
      </div>
      </form>
      </div>
      <% end %>


<div class='col-md-8 offset-md-1'>
<h1>Books</h1>
 <table class='table table-hover table-inverse'>
    <thread>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thread>
    <% @books.each do |book| %>
    <tbody>
      <tr>
      <td>
      <td><%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <% end %>
      </td>
      <td><%= link_to book.title, "/books/#{book.id}" %></td>
      <td><%= book.body %></td>
      </tr>
    </tbody>
     <% end %>
  </table>
  </div>
  </div>
</div>
